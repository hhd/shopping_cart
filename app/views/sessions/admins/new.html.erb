<% form_for resource_name, resource, :url => session_path(resource_name), :html => {:class => "frm"} do |f| -%>
  <h3>Login below</h3>
  <ul>
    <li>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </li>
    <li>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </li>
    <% if devise_mapping.rememberable? -%>
    <li class="last">
      <%= f.check_box :remember_me %> <%= f.label :remember_me, "Remember me?" %>
    </li>
    <% end -%>
    <li class="last">
      <%= f.submit "Log in" %>
    </li>
  </ul>
<% end %>

<%= render :partial => "shared/devise_links" %>
